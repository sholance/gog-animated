       justify-content: space-between;
    }

    .close {
      border: 0;
      border-radius: 50%;
      /* padding: 4px 15px; */
      width: 20px;
      height: 20px;
      cursor: pointer;
      background: #f2f2f2;
    }

    .chart-container {
      height: 400px;
      width: 80%;
      border: 1px solid #f2f2f2;
      margin: auto;
    }

    .details-wrapper {
      display: flex;
      flex-direction: column;
      /* justify-content: center;
      align-items: center; */
      gap: 10px;

    }

    .flag-wrapper {
      display: flex;
      gap: 20px;
      align-items: center;
    }

    .flag-icon {
      width: 100px;
      height: 80px;
      border: 1px solid #f2f2f2;
    }
    .caption-wrapper{
      display: flex;
      gap: 20px;
      align-items: center;
    }
    .country-details-wrapper{
      display: flex;
      gap: 10px;
      flex-direction: column;
    }
    .country-title{
      margin-left: 60px;
    }
